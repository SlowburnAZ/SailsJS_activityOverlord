<div class="container">
	<h1><%= user.name %></h1>
	<% if(user.admin) { %>
	<i class="glyphicon glyphicon-tower"></i> Admin
	<% } else { %>
	<i class="glyphicon glyphicon-user"></i> User
	<% } %>
	<h3><%= user.title %></h3>
	<hr>
	<h3>contact: <%= user.email %> </h3>

	<a class="btn btn-medium btn-primary" href="/user/edit/<%= user.id %>">Edit</a>
</div>